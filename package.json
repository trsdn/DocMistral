{
  "name": "@trsdn/mistraldocai-mcp-server",
  "version": "1.0.2",
  "description": "MCP server for document-to-Markdown conversion using Mistral AI OCR",
  "main": "dist/index.js",
  "bin": {
    "mistraldocai-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "postinstall": "node scripts/setup.js",
    "prepare": "npm run build",
    "test": "echo \"Testing MCP server...\" && node dist/index.js --test"
  },
  "keywords": [
    "mcp",
    "mcp-server",
    "model-context-protocol",
    "mistral",
    "mistral-ai",
    "ocr",
    "document-processing",
    "pdf-to-markdown",
    "image-to-text",
    "document-conversion",
    "ai-powered",
    "claude-desktop",
    "markdown",
    "pdf",
    "docx",
    "pptx"
  ],
  "author": "MistralDocAI",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/trsdn/MistralDocAI-mcp.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "python": ">=3.10.0"
  },
  "dependencies": {
    "fs-extra": "^11.0.0",
    "which": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/fs-extra": "^11.0.0",
    "@types/which": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "files": [
    "dist/",
    "src/",
    "scripts/",
    "python/",
    "README.md",
    "LICENSE"
  ],
  "preferGlobal": true,
  "mcp": {
    "server": {
      "name": "mistraldocai",
      "description": "Document to Markdown conversion using Mistral AI OCR",
      "version": "1.0.2"
